generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @unique @default(autoincrement())
  dni      Int?     @unique
  name     String
  surname  String?
  email    String   @unique
  password String
  comapny  Boolean  @default(false)
  phone    String?  @default("0000000000")
  address  String?  @default("No address")
  reviews  Review[]
  posts    Post[]
  Image    Image[]
  Liked    Liked[]
}

model Review {
  id           Int      @id @unique @default(autoincrement())
  user_id      Int
  review_body  String
  review_score Int
  publish_date DateTime @default(now())
  post_id      Int

  Image Image[]

  user User  @relation(fields: [user_id], references: [id])
  post Post? @relation(fields: [post_id], references: [id])

  @@index([user_id])
  @@index([post_id])
}

model Post {
  id           Int      @id @unique @default(autoincrement())
  publish_date DateTime @default(now())
  user_id      Int
  title        String
  has_defects  Boolean
  description  String
  defects      String
  price        Float

  Image   Image[]
  reviews Review[]
  Liked   Liked[]

  user User? @relation(fields: [user_id], references: [id])

  @@index([user_id])
}

model Image {
  image_id   Int        @id @unique @default(autoincrement())
  image_type ImageType?
  url        String

  post_id   Int?
  review_id Int?
  user_id   Int?

  post   Post?   @relation(fields: [post_id], references: [id])
  review Review? @relation(fields: [review_id], references: [id])
  user   User?   @relation(fields: [user_id], references: [id])

  @@index([user_id])
  @@index([review_id])
  @@index([post_id])
}

model Liked {
  user_id Int @id
  post_id Int

  user User @relation(fields: [user_id], references: [id])
  post Post @relation(fields: [post_id], references: [id])

  @@index([user_id])
  @@index([post_id])
}

enum ImageType {
  PFP
  GOOD
  TUMBNAIL
  PREVIEW
  BAD
  REVIEW
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}
