generator client {
  provider = "prisma-client-js"
}

model User {
  dni      Int      @id @unique
  name     String
  surname  String?
  pfp_url  String?
  email    String   @unique
  password String
  reviews  Review[]
  posts    Post[]
  //user id?
}

model Review {
  id           Int      @id @unique @default(autoincrement())
  user_dni     Int
  review_body  String
  review_score Int
  publish_date DateTime @default(now())
  post_id      Int

  images Image[]

  user User  @relation(fields: [user_dni], references: [dni])
  post Post? @relation(fields: [post_id], references: [id])

  @@index([user_dni])
  @@index([post_id])
}

model Post {
  id           Int      @id @unique @default(autoincrement())
  publish_date DateTime @default(now())
  user_dni     Int
  title        String
  has_defects  Boolean
  description  String
  defects      String
  price        Float

  images  Image[]
  reviews Review[]

  user User @relation(fields: [user_dni], references: [dni])

  @@index([user_dni])
}

model Image {
  post_id    Int       @id
  image_type ImageType
  url        String

  post      Post    @relation(fields: [post_id], references: [id])
  review    Review? @relation(fields: [review_id], references: [id])
  review_id Int?

  @@index([review_id])
  @@index([post_id])
}

enum ImageType {
  GOOD
  BAD
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}
